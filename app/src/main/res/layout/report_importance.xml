<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".ReportImportance">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important Reports"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/subTitleImportance"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_button"
        android:text="Date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvChosenDate"
        android:text="2020-07-07"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="145dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Choose the importance level of the reports you want to view"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="55dp"
        android:textSize="18sp"/>

    <SeekBar
        android:id="@+id/seekBarImportance"
        android:layout_width="300dp"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_height="24dp"
        android:max="4"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:progress="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvImportance"
        android:textSize="24sp"
        android:text="1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:background="@drawable/custom_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54dp"/>


</LinearLayout>