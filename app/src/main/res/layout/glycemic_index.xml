<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/toff"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/glycemic_index"
            android:textSize="35sp"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastUpdate"
            android:text=""
            android:gravity="center_horizontal"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnChooseDate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cal"
                android:padding="10dp"
                android:layout_marginLeft="80dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="80dp" />

            <Switch
                android:id="@+id/mySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="80dp"
                android:switchPadding="10dp"
                android:text="@string/today"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="80dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvDateChosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            android:hint="@string/date"
            android:textSize="24sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarGlycemicLevel"
            android:layout_width="300dp"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_height="24dp"
            android:max="3"
            android:layout_gravity="center"
            android:progress="1" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:hint="@string/choose_the_glycemic_level"
            android:id="@+id/tvGlycemicLevel"
            android:text=""
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_marginStart="55dp"
            android:gravity="center_horizontal">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:id="@+id/tvChosenLevel"
            android:text=""
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
        </TextView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:hint="@string/optionalNote"
            android:id="@+id/etOptionalNote"
            android:inputType="text|textMultiLine" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirm"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_button"
            android:padding="15dp"
            android:text="@string/confirm"
            android:textSize="24sp" />

</LinearLayout>